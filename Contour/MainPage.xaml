<Page
    x:Class="Contour.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Contour"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50px"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="330"/>
        </Grid.ColumnDefinitions>

        <Image  x:Name="OutlineImage" Grid.Row="0" Grid.Column="0"  Margin="25"/>
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
            <Border BorderBrush="DarkGray" BorderThickness="1">
                <Grid Margin="10,10,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Options" Grid.Row="0" Grid.Column="0"  VerticalAlignment="Center" FontWeight="Bold" />
                    <TextBlock Text="Number of levels" Grid.Row="1" Grid.Column="0"  VerticalAlignment="Center" />
                    <ComboBox x:Name="cbx_levels" Grid.Row="1" Grid.Column="1" AllowDrop="True" Height="40" />
                </Grid>
            </Border>
            
            

            <TextBlock/>
            <Button x:Name="btnLoadImage"  Content="Load Image"  HorizontalAlignment="Stretch"  
                    FontSize="15" Margin="0,5,0,5"
                    Tapped="BtnLoadImage_TappedAsync" />

            <Button x:Name="btnConvertToGrayScale"  Content="Convert to grayscale" HorizontalAlignment="Stretch" 
                    FontSize="15" Margin="0,5,0,5"
                    Tapped="BtnConvertToGrayScale_Tapped"/>

            <Button x:Name="btnRestoreOriginalImage"  Content="Restore original image" HorizontalAlignment="Stretch" 
                    FontSize="15" Margin="0,5,0,5"
                    Tapped="BtnRestoreOriginalImage_Tapped"/>


            <Button x:Name="btnSliceImage" Content="Extract levels" HorizontalAlignment="Stretch"
                    FontSize="15" Margin="0,5,0,5"
                    Tapped="BtnExtractLevels_Tapped"/>
            
            <Button x:Name="btnOutlineImage" Content="Outline image" HorizontalAlignment="Stretch"
                    FontSize="15" Margin="0,5,0,5"
                    Tapped="BtnOutlineImage_Tapped"/>

            <Button x:Name="btnClearImage" Content="Clear image" HorizontalAlignment="Stretch"
                    FontSize="15" Margin="0,5,0,5"
                    Tapped="BtnClearImage_Tapped"/>

            <Button x:Name="btnSaveImage" Content="Save image" HorizontalAlignment="Stretch"
                    FontSize="15" Margin="0,5,0,5"
                    Tapped="BtnSaveImage_Tapped"/>

            <Border BorderBrush="DarkGray" BorderThickness="1">

                <StackPanel>
                    <StackPanel>
                    <TextBlock Text="Display layers"  FontWeight="Bold" />
                    <Grid Margin="10,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Shapes" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" FontWeight="Bold" />
                        <TextBlock Text="Contours" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" FontWeight="Bold" />
                        <TextBlock Text="Layer" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" FontWeight="Bold" />
                    </Grid>
                    </StackPanel>
                    <StackPanel  x:Name="stp_Layers">
                        
                    </StackPanel>
                    <!--local:LayerDisplayParams></-->
                </StackPanel>
            </Border>

        </StackPanel>
        <TextBlock x:Name="tbl_Result" Grid.Column="1" Grid.Row="1"/>
    </Grid>

</Page>
