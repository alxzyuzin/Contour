<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">
    
   


    <Style  TargetType="Button" x:Key="ContentDialogPrimaryButtonStyle">
        <Setter Property="BorderThickness" Value="1"/>
       
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Background" Value="#FFcFcFcF"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <Style x:Key="ContentDialogTextBlocksStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Margin" Value="5,0,5,0" />
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!--     -->

    <Style x:Key="ProgressTextBlocksStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Margin" Value="5,0,5,0" />
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style  TargetType="Button" x:Key="ProgressCancelButtonStyle">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="20,0,20,0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Background" Value="#FFcFcFcF"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>
</ResourceDictionary>
